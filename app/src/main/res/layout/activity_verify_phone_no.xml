<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Doctor.VerifyPhoneNo">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/otp_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:lottie_autoPlay="true"
        android:background="@color/gradient_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/otp_animation" />

    <EditText
        android:id="@+id/patientOTP"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:textColor="@color/black"
        android:drawableStart="@drawable/otp_message_icon"
        android:drawablePadding="5sp"
        android:paddingEnd="7sp"
        android:hint="Enter OTP Code"
        android:inputType="textPersonName"
        android:textColorHint="@color/dark_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OTP_Phone" />

    <Button
        android:id="@+id/patientVerify"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:background="@drawable/but"
        android:fontFamily="@font/regular"
        android:text="Verify"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/patientOTP"
        app:layout_constraintVertical_bias="0.226" />

    <TextView
        android:id="@+id/Verify_otp_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter_font_google"
        android:text="A Verification Code has been sent to"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_animation" />

    <TextView
        android:id="@+id/OTP_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter_font_google"
        android:text="Number"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Verify_otp_heading" />
</androidx.constraintlayout.widget.ConstraintLayout>