<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:background="@color/extra_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_sans_regular"
            android:text="Medicine Name"
            android:textSize="16sp"
            android:textColor="@color/light_black"
           />

        <TextView
            android:id="@+id/medicine_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_sans_bold"
            android:text="Medicine weight"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/light_black"
            />

        <ImageView
            android:id="@+id/cancel_medicine"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="190dp"
            android:src="@drawable/search_view_end"/>

    </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      >


      <TextView
          android:id="@+id/medicine_usage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/pt_sans_regular"
          android:text="Medicine Usage"
          android:textSize="16sp"
          android:textColor="@color/light_black"
          android:layout_margin="5dp"/>


  </LinearLayout>

</LinearLayout>