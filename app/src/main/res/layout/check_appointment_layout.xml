<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:elevation="4dp"
    android:background="@drawable/view_appointment_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >





        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/appointment_patient_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/user_profile"
            app:civ_border_width="4dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            app:civ_border_color="@color/purple_blue"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                android:layout_marginLeft="30dp"
                android:textColor="@color/purple_blue"
                android:text="Name:" />

            <TextView
                android:id="@+id/appointment_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/inter_light"
                android:layout_marginLeft="15dp"
                android:textColor="@color/light_black"
                android:text="Wasiq Fayyaz" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                android:layout_marginLeft="30dp"
                android:textColor="@color/purple_blue"
                android:text="Phone:" />

            <TextView

                android:id="@+id/appointment_patient_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/inter_light"
                android:layout_marginStart="13dp"
                android:textColor="@color/light_black"
                android:text="0321-654321" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                android:layout_marginLeft="30dp"
                android:textColor="@color/purple_blue"
                android:text="Date:" />

            <TextView
                android:id="@+id/appointment_patient_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/inter_light"
                android:layout_marginStart="25dp"
                android:textColor="@color/light_black"
                android:text="06/06/2022" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/inter_medium"
                android:layout_marginLeft="30dp"
                android:textColor="@color/purple_blue"
                android:text="Time:" />

            <TextView
                android:id="@+id/appointment_patient_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/inter_light"
                android:layout_marginStart="25dp"
                android:textColor="@color/light_black"
                android:text="5:30 pm" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:fontFamily="@font/inter_medium"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/purple_blue"
                android:text="Description" />

            <TextView
                android:id="@+id/appointment_patient_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_light"
                android:layout_marginLeft="30dp"
                android:textColor="@color/light_black"
                android:text="Just a regular checkup!" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            >

            <Button
                android:id="@+id/approve_appointment"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:textAlignment="center"
                android:background="@drawable/approve_button"
                android:layout_marginStart="30dp"
                android:text="@string/approve"
                android:fontFamily="@font/inter_bold"
                android:textSize="18sp"
                />

            <Button
                android:id="@+id/deny_appointment"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:textAlignment="center"
                android:background="@drawable/deny_button"
                android:layout_marginStart="10dp"
                android:text="Deny"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_bold"
                android:textSize="18sp"
                />

        </LinearLayout>


    </LinearLayout>

</ScrollView>

