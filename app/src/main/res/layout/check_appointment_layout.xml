<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:elevation="4dp"
    android:background="@drawable/custom_border_linear_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/appointment_patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/pt_sans_bold"
                    android:textColor="@color/extra_white"
                    android:text="Wasiq Fayyaz" />

                <TextView
                    android:id="@+id/appointment_patient_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/pt_sans_bold"
                    android:textColor="@color/extra_white"
                    android:text="0321-654321" />

                <TextView
                    android:id="@+id/appointment_patient_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/pt_sans_bold"
                    android:textColor="@color/extra_white"
                    android:text="7 May, 2023" />


                <TextView
                    android:id="@+id/appointment_patient_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/pt_sans_bold"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/extra_white"
                    android:text="5:30 pm" />





            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/appointment_patient_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="4dp"
                android:src="@drawable/user_profile"
                app:civ_border_width="1dp"
                android:layout_marginStart="80dp"
                app:civ_border_color="@color/extra_white"/>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_margin="5dp"
            android:background="@color/extra_white"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edges"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/pt_sans_bold"
                android:textAlignment="center"
                android:textColor="@color/light_black"
                android:text="Disease" />


            <TextView
                android:id="@+id/disease_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="5dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/pt_sans_regular"
                android:text="COVID-19"
                android:textColor="@color/light_black"
                android:textSize="14sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/pt_sans_bold"
                android:textAlignment="center"
                android:textColor="@color/light_black"
                android:text="Symptom" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/symptomTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/pt_sans_regular"
                        android:text="chest pain"
                        android:textColor="@color/light_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/severityTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="end"
                        android:paddingRight="10dp"
                        android:fontFamily="@font/pt_sans_bold"
                        android:text="mild"
                        android:textColor="@color/light_black"
                        android:textSize="14sp" />



                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/pt_sans_bold"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/light_black"
                    android:text="Symptom Details" />

                <TextView
                    android:id="@+id/symptom_extra_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/pt_sans_regular"
                    android:text="Chest pain details"
                    android:textColor="@color/light_black"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/pt_sans_bold"
                android:textAlignment="center"
                android:textColor="@color/light_black"
                android:text="Description" />

            <TextView
                android:id="@+id/appointment_patient_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_margin="8dp"
                android:fontFamily="@font/pt_sans_regular"
                android:layout_marginStart="10dp"
                android:textColor="@color/light_black"
                android:text="Just a regular checkup!" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/approve_appointment"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:background="@drawable/approve_button"
                android:fontFamily="@font/pt_sans_bold"
                android:text="Approve"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="@color/extra_white"
                android:textAllCaps="false"
                android:textSize="16sp">

            </Button>

            <Button
                android:id="@+id/deny_appointment"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:background="@drawable/deny_button"
                android:fontFamily="@font/pt_sans_bold"
                android:text="Deny"
                android:layout_margin="10dp"
                android:textColor="@color/extra_white"
                android:textAllCaps="false"
                android:textSize="16sp">

            </Button>



        </LinearLayout>


    </LinearLayout>

</ScrollView>