<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/extra_white"
    android:orientation="vertical"
    tools:context=".Patient.labTestManagement_options">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/arrow_backwards"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pt_sans_bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:text="Add to cart"
            android:textColor="@color/light_black"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/light_black"
            android:textSize="18sp"
            android:layout_marginStart="15dp"
            android:text="List of items in cart"
            android:fontFamily="@font/pt_sans_bold"
            />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addToCartRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="50dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:textSize="18sp"

                android:layout_marginStart="15dp"
                android:text="Total Price"
                android:fontFamily="@font/pt_sans_bold"
                />
            <TextView
                android:id="@+id/tprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/light_black"
                android:textSize="18sp"
                android:layout_marginStart="15dp"
                android:text="Total Price"

                />

        </LinearLayout>

        <Button
            android:id="@+id/pharmacyToCart"
            android:layout_width="367dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/but"
            android:elevation="4dp"
            android:fontFamily="@font/pt_sans_regular"
            android:text="Purchase"
            android:textAllCaps="false"
            android:textColor="@color/extra_white"
            android:textSize="16sp" />
    </LinearLayout>



</androidx.appcompat.widget.LinearLayoutCompat>