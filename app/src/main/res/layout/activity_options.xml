<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:background="@color/white"
    tools:context=".Doctor.OptionsActivity"
    android:fitsSystemWindows="true"
    android:layout_gravity="start">

    <com.google.android.material.navigation.NavigationView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationBar"
        tools:layout_editor_absoluteY="0dp"

        android:background="@color/purple_blue"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        android:fitsSystemWindows="true"
        app:menu="@menu/side_menu"
        android:layout_gravity="start"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_user">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            app:subtitleTextColor="@color/black"
            app:titleTextColor="@color/black"
             />




        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/doctor_profile"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/user_profile"
            app:civ_border_width="3dp"
            android:layout_gravity="center"
            app:civ_border_color="@color/white"/>
          />

        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/inter_bold"
            android:layout_marginTop="5dp"
            android:textSize="30sp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/extra_white"
            android:text="John Smith" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/doctor_view_appointment"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/view_appointment" />

            <ImageView
                android:id="@+id/manage_appointments"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/manage_appointments" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center">

            <ImageView
                android:id="@+id/doctor_online_consultation"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/online_consultation" />

            <ImageView
                android:id="@+id/doctor_online_prescription"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:src="@drawable/online_prescription" />

        </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.drawerlayout.widget.DrawerLayout>