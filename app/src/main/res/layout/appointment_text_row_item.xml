<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:background="@color/dark_grey"
    tools:ignore="HardcodedText"
    android:padding="7dp">

    <TextView
        android:id="@+id/appointmentNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/inter_font_google"
        android:text="Names"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageView16"
        app:layout_constraintTop_toTopOf="parent"
       />

    <TextView
        android:id="@+id/appointeePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/work_sans_google"
        android:text="phone"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageView16"
        app:layout_constraintTop_toBottomOf="@+id/appointmentNames" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_avatar_square"
        />

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/viewAppointment"
            android:layout_width="80dp"
            android:layout_height="23dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/but"
            android:fontFamily="@font/inter_font_google"
            android:text="view"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/viewProfilePatient2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/deleteAppointment"
            android:layout_width="80dp"
            android:layout_height="23dp"
            android:background="@drawable/but"
            android:fontFamily="@font/inter_font_google"
            android:text="Delete"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="335dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>