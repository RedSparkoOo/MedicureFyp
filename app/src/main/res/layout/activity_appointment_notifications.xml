<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/extra_white"
    tools:context=".Doctor.AppointmentNotifications">

    <SearchView
        android:id="@+id/search_patient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/searchview_field"
        android:searchIcon="@drawable/search_icon"
        android:queryHint="Search Patient"
        android:closeIcon="@drawable/search_view_end"
        android:iconifiedByDefault="false"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/manage_appointment_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</androidx.appcompat.widget.LinearLayoutCompat>