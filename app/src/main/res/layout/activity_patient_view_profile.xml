<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"

    tools:context=".Doctor.viewDoctorProfile">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/viewprofilebackground" />


    <TextView
        android:id="@+id/viewPatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="Patient name"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toStartOf="@+id/viewPatientPicture"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.384">

        <TextView
            android:id="@+id/viewPatientEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/ubuntu_light"
            android:text="Email Address"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="202dp" />

        <TextView
            android:id="@+id/viewPatientPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/ubuntu_light"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="262dp" />

        <TextView
            android:id="@+id/viewPatientPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/ubuntu_light"
            android:text="Phone No"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="289dp" />

        <TextView
            android:id="@+id/viewPatientCnic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/ubuntu_light"
            android:text="CNIC"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="321dp" />

        <TextView
            android:id="@+id/viewPatientGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/ubuntu_light"
            android:text="Gender"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="321dp" />

        <TextView
            android:id="@+id/viewPatientDob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:fontFamily="@font/ubuntu_light"
            android:text="Date of Birth"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="321dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/viewPatientPicture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.657"
        app:srcCompat="@drawable/doctorprofilepicture" />
</androidx.constraintlayout.widget.ConstraintLayout>