<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="3dp"
    android:background="@drawable/linear_layout_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/doctor_profile"
            android:layout_width="140dp"
            android:padding="10dp"

            android:layout_height="140dp"
            android:adjustViewBounds="true"
            android:src="@drawable/user_profile"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appointment_doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_medium"
                android:text="Dr.Ali"
                android:textColor="@color/light_black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/appointment_doctor_specialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_light"
                android:textStyle="bold"
                android:text="Cardiologist"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/light_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_light"
                android:text="Dr.Ali here is an excellent doctor for heart problems"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/light_black" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:orientation="horizontal"
              >

              <Button
                  android:id="@+id/appointment_doctor_book"
                  android:layout_width="80dp"
                  android:layout_height="22dp"
                  android:background="@drawable/but"
                  android:textColor="@color/extra_white"
                  android:textSize="10sp"
                  android:elevation="2dp"
                  android:layout_marginTop="3dp"
                  android:layout_marginStart="2dp"
                  android:fontFamily="@font/inter_medium"
                  android:text="Book"

                  />

              <RatingBar
                  android:layout_width="15dp"
                  android:layout_height="15dp"
                  android:layout_marginTop="8dp"
                  android:layout_marginStart="120dp"
                  android:background="@drawable/rating_star">
              </RatingBar>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/inter_medium"
                  android:text="4.5"
                  android:layout_marginTop="3dp"
                  android:textSize="10sp"
                  android:layout_marginStart="5dp"
                  android:textColor="@color/light_black" />

          </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>