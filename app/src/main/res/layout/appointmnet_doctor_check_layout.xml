<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:elevation="3dp"
    android:orientation="vertical"
    android:background="@drawable/linear_layout_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/doctor_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:background="@drawable/image_round_outline"
            android:clipToOutline="true"
            android:adjustViewBounds="true"
            android:src="@drawable/user_profile"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pt_sans_bold"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Dr. "
                    android:textColor="@color/light_black"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/appointment_doctor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/pt_sans_bold"
                    android:text="Ali"
                    android:textColor="@color/light_black"
                    android:textSize="18sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/appointment_doctor_specialization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans_regular"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:text="Cardiologist"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:textColor="@color/light_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans_regular"
                android:text="10:00 am - 6:00 pm"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/light_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <RatingBar
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/rating_star">

                    </RatingBar>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="2dp"
        android:layout_margin="7dp"
        android:background="@color/dark_grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="2dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/appointment_doctor_book"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@drawable/but"
            android:textColor="@color/extra_white"
            android:textSize="12sp"
            android:elevation="4dp"
            android:textAllCaps="false"
            android:fontFamily="@font/pt_sans_regular"
            android:text="Book"
            />



    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>