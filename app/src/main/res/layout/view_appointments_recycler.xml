<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:elevation="5dp"
    android:background="@drawable/custom_border_linear_layout"
    tools:ignore="HardcodedText"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appointmentNames"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans_bold"
                android:text="Mahmood Aslam"
                android:padding="3dp"
                android:textColor="@color/extra_white"
                android:textSize="22sp"
                />

            <TextView
                android:id="@+id/appointeePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans_bold"
                android:text="0311 6543201"
                android:padding="3dp"
                android:textColor="@color/extra_white"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/appointment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans_bold"
                android:text="7 may, 2023"
                android:padding="3dp"
                android:textColor="@color/extra_white"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/appointment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pt_sans_bold"
                android:text="2:30 pm"
                android:padding="3dp"
                android:textColor="@color/extra_white"
                android:textSize="14sp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_margin="5dp"
            android:orientation="vertical"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/appointment_patient_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:elevation="4dp"
                android:src="@drawable/user_profile"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/extra_white"/>


        </LinearLayout>

    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:layout_margin="10dp"
    android:background="@drawable/edges"
    android:orientation="horizontal">

    <Button
        android:id="@+id/chatAppointment"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@drawable/but"
        android:textAllCaps="false"
        android:fontFamily="@font/pt_sans_regular"
        android:text="Chat"
        android:textColor="@color/extra_white"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/deleteAppointment"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/but"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/pt_sans_regular"
        android:text="Delete"
        android:textColor="@color/extra_white"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/sendPrescription"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="@drawable/but"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/pt_sans_regular"
        android:text="Send E-Rx"
        android:textColor="@color/extra_white"
        android:textSize="14sp"
        />


</LinearLayout>






</androidx.appcompat.widget.LinearLayoutCompat>